{% use "blocks.html.twig" %}
{% use "Form/blocks.html.twig" %}
{% use "@App/PriceLists/formBlocks.html.twig" %}

{% set admin = form.vars.attr['data-admin']|default(false) %}

{% set en = 'pricelists' %}

<div class="row-blocks">
    <div class="col-12">
        {% set card={ 
            attr: {
                class: 'card-sm'
            },
            header: { 
                title: 'pricelists.label.basic_data',
                right_content: block('btn_more_card')
            },
            content: block('form_pricelists_basic')
        } %}
        {{ block("card") }}
    </div>
</div>
<div class="row-blocks">
    <div class="col-12">
        {% set card={ 
            attr: {
                class: 'card-sm'
            },
            header: { 
                title: 'pricelists.label.prices',
                right_content: block('prices_buttons')                
            },
            block:{
                attr: {
                    class: 'scroll'
                }
            },
            content: form_row(form.prices, { entities_settings: entities_settings }) 
        } %}
        {{ block("card") }}
    </div>
</div>
<div style="display:none;">
    {{form_widget(form)}}
</div>